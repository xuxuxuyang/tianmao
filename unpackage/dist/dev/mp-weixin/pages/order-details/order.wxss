/* 订单商品 */
.payment-view{margin: 15rpx;}
/* 下单商品 */
.payment-commodity{
background-color: #FFFFFF; border-radius: 15rpx;
font-size: 28rpx;
padding: 0 20rpx;
margin: 15rpx 0;
}
.payment-order{
display: flex;
justify-content: space-between;
height: 200rpx;
margin-bottom: 8rpx;
}
.payment-order text{display: block;}
.payment-order-img{width: 200rpx; height: 200rpx;
border-radius: 8rpx;
padding-right: 10rpx;
}
.payment-order-img image{width: 200rpx; height: 200rpx;
border-radius: 8rpx;
}
.payment-title{flex: 1;}
.payment-title text:nth-child(1){
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.payment-title text:nth-child(2){
background-color: rgb(250, 250, 250);
padding: 5rpx;
border-radius: 7rpx;
display: inline-block;
}
.payment-price{text-align: right;}
.payment-flex{
display: flex;
flex-direction: column;
justify-content: space-between;
width: 150rpx;
}
.text-you{color: rgb(156, 156, 156);
margin-top: 8rpx;
}
/* 提示 */
.order-tips{
display: flex;
justify-content: flex-end;
align-items: center;
height: 70rpx;
color: rgb(255, 80, 0);}
/* 价格 */
.presonal-Price{
height: 70rpx;
display: flex;
justify-content: flex-end;
align-items: center;
}
/* 付款 */
.presonal-payment{
height: 90rpx;
display: flex;
justify-content: flex-end;
align-items: center;
border-top: 1rpx solid rgb(248, 248, 248);}
.presonal-payment text{
color: rgb(255, 80, 0);
border-radius: 20rpx;
border: 1rpx solid rgb(255, 80, 0);
padding: 8rpx 40rpx;
}
/* 订单详情 */
page{background: #eeeeee;}
.order-details-view{
background-color: rgb(255, 0, 54);
height: 200rpx;
display: flex;
justify-content: space-between;
align-items: center;
padding: 0 50rpx;
color: #FFFFFF;
font-size: 30rpx;
}
.order-details-view image{width: 200rpx; height: 200rpx;}
/* 地址 */
.order-details-address text{display: block;}
.order-details-address{
font-size: 28rpx;
background-color: #FFFFFF;
display: flex;
align-items: center;
height: 140rpx;
padding: 0 20rpx;
margin-bottom: 20rpx;
}
.order-details-address view:nth-child(1){width: 60rpx; height: 60rpx;
padding-right: 20rpx;
}
.order-details-address image{width: 60rpx; height: 60rpx;}
.order-details-name text:nth-child(1){padding-bottom: 10rpx;}
/* 商品详情 */
.tips-import{height: 15rpx !important;}
.pay-border{border-radius: inherit !important; margin: inherit !important;}
.order-number{
background-color: #FFFFFF;
font-size: 28rpx;
}
.order-number text{display: block;
padding: 10rpx 20rpx;
}
/* 支付 */
.order-details-play{background-color: #FFFFFF;
height: 80rpx;
display: flex;
justify-content: flex-end;
position: fixed;
bottom: 0;
left: 0;
right: 0;
}
.order-details-play text{height: 80rpx; width: 200rpx;
font-size: 28rpx;
color: #FFFFFF;
background-color: rgb(255, 0, 54);
text-align: center;
line-height: 80rpx;
}
